<div class="container">
  <%= render @post %>
  <div>
<%= link_to "Back to posts", posts_path, class: "btn btn-secondary", style: "height: 40px; width: 130px;"%> |
      <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-warning", style: "height: 40px; width: 130px;"%> <br> <br>
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger", style: "width: 150px;" %>
  </div>
  <br>
</div>
<div class="container">
  <%= render 'comments/form', 
    post: @post, 
    comment: @post.comments.build,
    submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', 
    post: @post, 
    comment: comment %>
  <% end %>
</div>